{% extends 'base.html.twig' %}

{% block title %}{{product.name}}{% endblock %}

{% block body %}
<main class="m-3">
 
<!-- product menu-->
<section>
  <div class="mx-4 ">
      <div class="row gap-3">
        {% if  product  %}
          
            <div class="card mb-12" style="width: 100%;">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src="{{asset('uploads/'~product.image)}}" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <div class="card">
                      <div class="card-body">
                        <h5 class="card-title">{{product.name}}</h5>
                        <p class="card-text">{{product.descritption}}.</p>
                        <h5> <span class="text text-danger">{{product.price}}</span>  DH</h5>

                        <h5> <span class="text text-success">{{product.category.name}}</span></h5>
                      </div>
                      
                    </div>
                  </div>
                  <div class="m-3 d-flex justify-content-start align-items-center">
             
                      <a href="{{path('order_store', {product:product.id})}}" class="btn btn-outline-dark btn-lg">Order Now</a>

                  </div>  
                </div>
              </div>
            </div>

          
        {% else %}
          <div class="alert alert-info">
            NO Product Found ..
          </div>
          
        {% endif %}
      </div>
  </div>
</section>

</main>



{% endblock %}
