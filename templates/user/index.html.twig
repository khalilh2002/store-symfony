{% extends 'base.html.twig' %}

{% block title %}Admin Users list{% endblock %}

{% block body %}
<div class="">
    
    <div class="row my-5">
        <div class="col-md-10 mx-auto ">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

                <div class="card ">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Users List</span> 
                        
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Role Admin</th>
                                    <th>Role User</th>

                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{user.id}}</td>
                                        <td>{{user.username}}</td>
                                        <td>{{user.email}}</td>
                                        <td>{{user.phoneNumber}}</td>
                                        
                                                
                                                
                                            <td class="text-center">
                                                {% for role in user.roles %}
                                                    {% if role == "ROLE_ADMIN" %}
                                                        <i class="fa-solid fa-check" style="color: #63E6BE;"></i>
                                                    {% endif %}
                                                {% endfor %}                                           
                                            </td>

                                            <td class="text-center">
                                                {% for role in user.roles %}
                                                    {% if role != "ROLE_ADMIN" %}
                                                        <i class="fa-solid fa-check" style="color: #63E6BE;"></i>
                                                    {% endif %}
                                                {% endfor %}                                           
                                            </td>    
                                    </tr>
                                {% endfor %}
                                <tr class="text-center">
                                    <th colspan="3" >users Total</th>
                                    <td class="fw-bold">{{ users|length }} </td>
                                </tr>
                            </div>
                        </tbody>
                    </table>
                </div>
        </div>
        
    </div>
    
</div>
{% endblock %}