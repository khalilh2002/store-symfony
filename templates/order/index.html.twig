{% extends 'base.html.twig' %}

{% block title %}Admin Orders list{% endblock %}

{% block body %}
<div class="">
    
    <div class="row my-5">
        <div class="col-md-10 mx-auto ">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

                <div class="card ">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Order List</span> 
                        <a href="{{path('product_store')}}" class="btn btn-sm btn-primary">
                            Add
                        </a>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th>product</th>
                                    <th>price</th>
                                    <th>status</th>
                                    <th>action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set sum = 0 %}
                                {% for order in orders %}
                                    {% set sum = sum + order.price %}
                                    <tr>
                                        <td>{{order.id}}</td>
                                        <td>{{order.pname}}</td>
                                        <td>{{order.price}}</td>
                                        <td>
                                        <div class="dropdown">
                                            {% if order.status == "Processing.." %}
                                                {% set color = "dark"%}
                                                

                                            {% elseif order.status == "Shiping" %}  
                                                {% set color = "success"%}

                                            {% else %}
                                                {% set color = "warning"%}

                                            {% endif %}
                                            <button class="btn btn-{{color}} dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                {{order.status}}
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="{{ path('order_status_update',{order:order.id,status:'Processing..'}) }}">Processing..</a></li>
                                                <li><a class="dropdown-item" href="{{ path('order_status_update',{order:order.id,status:'Shiping'}) }}">Shiping</a></li>
                                                <li><a class="dropdown-item" href="{{ path('order_status_update',{order:order.id,status:'Rejected'}) }}">Reject</a></li>
                                            </ul>
                                        </div>                                        
                                        </td> 
                                        <td class="d-flex justify-content-around align-items-center">
                                            <form id="deleteForm_{{order.id}}" action="{{path('admin_order_delete',{order: order.id})}}" method="post">
                                               <button type="button" onclick="deleteItem('{{ order.id }}')" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                            
                                        </td>                                       
                                    </tr>
                                {% endfor %}
                                <tr class="text-center">
                                    <th colspan="3" >Total</th>
                                    <td class="fw-bold">{{sum}} DH</td>
                                </tr>
                            </div>
                        </tbody>
                    </table>
                </div>
        </div>
        
    </div>
    
</div>
{% endblock %}
